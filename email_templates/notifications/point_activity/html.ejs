<% include ../header.html.ejs %>

<% if (activity.type == 'activity.point.new') { %>
  <h1 style="font-weight: 600;line-height: 1.1em;margin: 0;font-size: 14pt;padding-top: 8px;"><%= post.id == user.id ? t('notification.email.pointNewSelf') : t('notification.email.pointNew') %></h1>
  <h2><%= post.name %></h2>
  <p>
    <%= point.content %>
  </p>
<% } %>
<% if (activity.type == 'activity.point.unhelpful') { %>
  <h1 style="font-weight: 600;line-height: 1.1em;margin: 0;font-size: 14pt;padding-top: 8px;"><%= post.id == user.id ? t('notification.email.pointUnhelpfulSelf') : t('notification.email.pointUnhelpful') %></h1>
<% } %>
<% if (activity.type == 'activity.point.helpful') { %>
  <h1 style="font-weight: 600;line-height: 1.1em;margin: 0;font-size: 14pt;padding-top: 8px;"><%= post.id == user.id ? t('notification.email.pointHelpfulSelf') : t('notification.email.pointHelpful') %></h1>
<% } if (activity.type == 'activity.report.content') { %>
  <h1 style="font-weight: 600;line-height: 1.1em;margin: 0;font-size: 14pt;padding-top: 8px;"><%= t('notification.email.pointReport') %></h1>
  <h2><%= post.name %></h2>
  <p>
    <%= point.content %>
  </p>
<% } %>
<br>
<%- linkTo("https://"+community.hostname+"."+domain.domain_name+"/post/"+post.id+"/"+point.id) %>

<% include ../footer.html.ejs %>
